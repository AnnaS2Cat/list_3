//Crie um vetor para guardar 50 temperaturas:
//int temps[50];
//As temperaturas variam entre -100 e 100.
//Leia as 50 temperaturas para o vetor
//Calcule a média das temperaturas no vetor
//Exiba a quantidade de leituras acima da média calculada
//Em vez de int, use o tamanho mais econômico
//(Mas lembre-se que o "%d" do scanf só funciona com o tipo int
 
#include <stdio.h>

int main(void) {
    int temps[50], i, temp;
    int soma = 0;
    float media;
    int quant=0;
    for (i=0; i<50 ; i++){
        printf("digite as temperatudas segundo o intervalo (-100 e 100) de (%d a 50):\n", i+1);
        scanf("%d",&temp);
        if (temp<-100 || temp>100){
            printf("não válido! \n");
            i=i-1; //decrementa para repetir a entrada 
            continue;
        }
    temps[i] = temp;
    }
    for (i=0; i<50; i++){
        soma= soma + temps[i];}
        
    media=soma/50.0;
    printf("a média é:%f \n", media);
    
    for (i=0; i<50; i++){
        if (temps[i]>media){
            quant=quant+1;}
    }
    printf("a quantidade de temperaturas maiores que a média é: %d",quant);
    } 
   ---------------------------------------------------------------------------------------------------------------------------------------- 
    isso usando inteiro, para o mesmo código usando menos memória e apenas 1 byte é:

    #include <stdio.h>

    int main(void) {
       signed char temps[50];  // Tipo mais econômico que ainda suporta -100 a 100
       int i, temp;
       int soma = 0;
       float media;
       int quant = 0;

       for (i = 0; i < 50; i++) {
           printf("Digite a temperatura (%d de 50), entre -100 e 100:\n", i + 1);
           scanf("%d", &temp);
           if (temp < -100 || temp > 100) {
               printf("Valor não válido!\n");
               i--; // repete a entrada
               continue;
               }
           temps[i] = (signed char)temp; 
           } //para converter com segurança de int (lido do scanf) para o tipo do vetor.
       for (i = 0; i < 50; i++) {
           soma += temps[i];
        }
       media = soma / 50.0;
          printf("A média é: %f \n", media);
       for (i = 0; i < 50; i++) {
           if (temps[i] > media) {
            quant=quant+1;
        }
        }

        printf("Quantidade de temperaturas acima da média: %d\n", quant);
        }

    
